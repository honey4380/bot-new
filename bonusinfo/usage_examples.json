{
    "deposit_bonus": {
        "title": "%100 İlk Yatırım Bonusu",
        "description": "İlk yatırıma özel tek kullanımlık %100 bonus\nSadece yeni üyeler için geçerlidir",
        "example": {
            "bonuses": [{
                "id": 4483,
                "value": {
                    "calculationType": "percentage",
                    "amountCalculation": "lastDeposit",
                    "amount": [{"min": 100, "max": 1000, "percentage": 100}],
                    "max": 1000
                },
                "usage": {
                    "maxUses": 1
                },
                "conditions": {
                    "activeBonusCheck": true
                }
            }],
            "controlParams": [{
                "controlName": "checkLastDeposit",
                "params": {
                    "days": 1,
                    "min": 100,
                    "checkIsUsed": true,
                    "checkFirstDeposit": true
                }
            }]
        }
    },
    "daily_deposit": {
        "title": "Günlük Yatırım Bonusu",
        "description": "Her gün yatırıma özel %20 bonus\nGünlük limitleri olan sürekli bonus",
        "example": {
            "id": 4494,
            "value": {
                "calculationType": "percentage",
                "amountCalculation": "lastDeposit",
                "amount": [{"min": 100, "max": 2000, "percentage": 20}],
                "max": 2000  
            },
            "usage": {
                "maxUses": -1, 
                "resetDayCount": 1,  
                "resetHour": 0  
            },
            "conditions": {
                "activeBonusCheck": true
            }
        },
        "notes": [
            "Her gün tekrar alınabilir",
            "Gece 00:00'da kullanım hakkı yenilenir",
            "Minimum 100 TL yatırım gerekli",
            "Günlük maksimum 2000 TL bonus"
        ],
        "controlParams": [
            {
                "controlName": "checkLastDeposit",
                "params": {
                    "days": 1,
                    "min": 100,
                    "checkIsUsed": true,
                    "beforeBalanceMin": 3
                }
            },
            {
                "controlName": "checkWithdrawExist",
                "params": {
                    "days": 1,
                    "hasWithdraw": false,
                    "controlAfterDeposit": true
                }
            }
        ]
    },
    "loss_bonus": {
