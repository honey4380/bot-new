            "bonuses": [{
                "id": 4495,
                "value": {
                    "calculationType": "percentage",
                    "amountCalculation": "loss",
                    "calculationDate": "2025-02-21T22:05:00",
                    "minDiff": 20,
                    "maxDiff": null,
                    "amount": [
                        {"min": 20, "max": 9999, "percentage": 20},
                        {"min": 10000, "max": 19999, "percentage": 25},
                        {"min": 20000, "max": null, "percentage": 30}
                    ],
                    "max": 2000
